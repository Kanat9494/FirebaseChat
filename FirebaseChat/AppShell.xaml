<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirebaseChat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirebaseChat"
    xmlns:views="clr-namespace:FirebaseChat.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="MainPage" />

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:SecondPage}"
            Route="MainPage" />
    </TabBar>

    <ShellContent
        Route="TestPage"
        ContentTemplate="{DataTemplate views:TestPage}"/>

</Shell>
